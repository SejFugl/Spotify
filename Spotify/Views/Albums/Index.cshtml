@model Spotify.Models.SpotifyViewModels.AlbumIndexData

@{
    ViewData["Title"] = "Albums";
}

<h1>Albums</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>AlbumArtUrl</th>
            <th>Artist</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Albums)
        {
            string selectedRow = "";
            if (item.AlbumId == (int?)ViewData["AlbumId"])
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.AlbumArtUrl)</td>
                <td>@Html.DisplayFor(modelItem => item.Artist.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre.Name)</td>
                <td>
                    <a asp-action="Index" asp-route-albumId="@item.AlbumId">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.AlbumId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AlbumId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AlbumId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Songs != null && Model.Songs.Any())
{
    <h3>Songs in Selected Album</h3>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model.Songs)
            {
                <tr>
                    <td>@song.SongId</td>
                    <td>@song.Title</td>
                </tr>
            }
        </tbody>
    </table>
}
